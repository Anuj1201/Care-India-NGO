	border: none;
	box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	position: relative;
	/* Make card relative to position images absolutely */
	overflow: hidden; /* Hide overflow for animation effect */
}

/* Card image styling */
.card img {
	object-fit: cover;
	width: 100%;
	position: absolute; /* Position images absolutely */
	top: 0; /* Align images to the top of the card */
	left: 100%; /* Start images off-screen to the right */
	transition: left 0.5s ease-in-out; /* Transition for sliding */
}

/* Show image in the default position */
.card img.show {
	left: 0; /* Move image to the center of the card */
}

/* Hide the previous image */
.card img.hide {
	left: -100%; /* Move previous image off-screen to the left */
}

